<main class="container container-forms">
  <h1>
    <%= pageName %>
  </h1>

  <form class="default-form" method="POST" enctype="multipart/form-data">
    <legend>Sube tu imagen que se mostrará junto a tu nombre y biografía</legend>
    
    <div class="field">
      <label>Imagen</label>
      <input type="file" name="image">
    </div>

    <% if (user.image) { %>
      <div class="field">
        <label>Imagen Actual</label>
        <img src="/uploads/profiles/<%= user.image %>" width="400">
      </div>
    <% } else { %>
      <p>No hay imagen actual</p>
    <% } %>
    
    <div class="field send">
      <input type="submit" value="Subir Imagen" class="btn btn-pink">
    </div>
  </form>
</main>
