<main class="container container-forms no-padding">
  <h1>
    <%= pageName %>
  </h1>

  <form class="default-form" action="/new-group" method="POST" enctype="multipart/form-data">
    <div class="field">
      <label>Nombre</label>
      <input type="text" name="name" placeholder="Nombre Grupo">
    </div>

    <div class="field description">
      <label>Descripción</label>

      <div class="editor-container">
        <input type="hidden" id="x" name="description">
        <trix-editor input="x"></trix-editor>
      </div>
    </div>

    <div class="field">
      <label>Categoría</label>

      <select name="categoryId">
        <option value="" selected disabled> -- Elige una categoría -- </option>
        <% categories.forEach(category => { %>
          <option value="<%= category.id %>">
            <%= category.name %>
          </option>
        <% }) %>
      </select>
    </div>

    <div class="field">
      <label>Imagen</label>
      <input type="file" name="image">
    </div>

    <div class="field">
      <label>Sitio Web</label>
      <input type="url" name="url" placeholder="Sitio Web">
    </div>
    
    <div class="field send">
      <input type="submit" value="Crear Grupo" class="btn btn-pink">
    </div>
  </form>
</main>
