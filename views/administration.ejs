<main class="container admin-dashboard">
  <h1>
    <%= pageName %>
  </h1>

  <div class="container-buttons">
    <a href="/new-group" class="btn btn-yellow">Nuevo Grupo</a>
    <a href="/new-meeti" class="btn btn-blue">Nuevo Meeti</a>
    <a href="/edit-profile" class="btn btn-pink">Editar Perfil</a>
    <a href="/reset-password" class="btn btn-green">Cambiar Password</a>
    <a href="/profile-image" class="btn btn-yellow">Imagen Perfil</a>
  </div>

  <div class="section-admin">
    <h2>Próximos Meeti's</h2>

    <% if (meeti.length > 0 ) { %>
      <ul>
        <% meeti.forEach(meet => { %>
          <li>
            <div class="information-admin">
              <% moment.locale('es'); %>
              <% const date = meet.date +' '+ meet.hour; %>
              
              <p class="date"><%= moment(date).format(' LLLL'); %> Horas</p>
              
              <a href="/meeti/<%= meet.slug %>" target="_blank">
                <h3>
                  <%= meet.title %>
                </h3>
              </a>
              
              <small>
                <%= meet.interesteds.length %> Interesados
              </small>
            </div>

            <div class="actions container-buttons">
              <a href="/edit-meeti/<%= meet.id %>" class="btn btn-green">Editar</a>
              <a href="/assistances-meeti/<%= meet.id %>" class="btn btn-blue2">Asistentes</a>
              <a href="/delete-meeti/<%= meet.id %>" class="btn btn-red">Eliminar</a>
            </div>
          </li>
        <% }) %>
      </ul>
    <% } else { %>
      <p>Aún no tienes meeti's creados</p>
    <% } %>
  </div>

  <div class="section-admin">
    <h2>Tus Grupos</h2>

    <% if (groups.length ) { %>
      <ul>
        <% groups.forEach(group => { %>
          <li>
            <div class="information-admin">
              <h3>
                <%= group.name %>
              </h3>
            </div>

            <div class="actions container-buttons">
              <a href="/edit-group/<%= group.id %>" class="btn btn-green">Editar</a>
              <a href="/group-image/<%= group.id %>" class="btn btn-blue2">Imagen</a>
              <a href="/delete-group/<%= group.id %>" class="btn btn-red">Eliminar</a>
            </div>
          </li>
        <% }) %>
      </ul>
    <% } else { %>
      <p>No tienes un grupo creado</p>
    <% } %>
  </div>

  <div class="section-admin">
    <h2>Meeti's Anteriores</h2>

    <% if (pastMeeti.length> 0 ) { %>
      <ul>
        <% pastMeeti.forEach(meet => { %>
          <li>
            <div class="information-admin">
              <% moment.locale('es'); %>
              <% const date = meet.date +' '+ meet.hour;  %>
              
              <p class="date"><%= moment(date).format(' LLLL'); %> Horas</p>
              
              <h3>
                <%= meet.title %>
              </h3>
              
              <small>
                <%= meet.interesteds.length %> Interesados
              </small>
            </div>

            <div class="actions container-buttons">
              <a href="/edit-meeti/<%= meet.id %>" class="btn btn-green">Editar</a>
              <a href="/assistances-meeti/<%= meet.id %>" class="btn btn-blue2">Asistentes</a>
              <a href="/delete-meeti/<%= meet.id %>" class="btn btn-red">Eliminar</a>
            </div>
          </li>
        <% }) %>
      </ul>
    <% } else { %>
      <p>No hay Meeti's Anteriores</p>
    <% } %>
  </div>
</main>
