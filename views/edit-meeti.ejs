<main class="container container-forms">
  <h1><%- pageName %></h1>

  <form class="default-form" method="POST">
    <legend>Sobre el Meeti</legend>

    <div class="field">
      <label>Grupo</label>

      <select name="groupId">
        <option value="" disabled selected> -- Selecciona Grupo -- </option>
        <% if (groups.length > 0 ) { %>
          <% groups.forEach(group => { %>
            <option <%= (meeti.groupId === group.id ) ? 'selected' : '' %> value="<%= group.id %>">
              <%= group.name %>
            </option>
          <% }) %>
        <% } %>
      </select>
    </div>

    <div class="field">
      <label>Titulo</label>
      <input type="text" name="title" value="<%= meeti.title %>">
    </div>

    <div class="field">
      <label>Invitado</label>
      <input type="text" name="invited" value="<%= meeti.invited %>">
    </div>

    <div class="cols-2 grid">
      <div class="field">
        <label>Fecha</label>
        <input type="date" name="date" value="<%= meeti.date %>">
      </div>

      <div class="field">
        <label>Hora</label>
        <input type="time" name="hour" value="<%= meeti.hour %>">
      </div>
    </div>

    <div class="field">
      <label>Cupo</label>
      <input type="number" min="1" name="quota" value="<%= meeti.quota %>">
    </div>

    <div class="field description">
      <label>Descripción</label>

      <div class="editor-container">
        <input type="hidden" id="x" name="description" value="<%= meeti.description %>">
        <trix-editor input="x"></trix-editor>
      </div>
    </div>

    <legend>Ubicación Meeti</legend>

    <div class="field searcher">
      <label>Coloca la Dirección del Meeti</label>

      <div class="input-container">
        <input type="text" id="formSearcher" placeholder="Ubicación">
        <small>El asistente colocará una dirección estimada</small>
      </div>
    </div>

    <div id="edit-map" class="field map">
      <div id="map"></div>
      <p class="information">Mueve el Pin hasta el punto exacto</p>
    </div>

    <p class="information">Confirma que los siguientes campos sean correctos:</p>

    <div class="field">
      <label>Dirección</label>
      <input type="text" id="direction" name="direction" value="<%= meeti.direction %>">
    </div>

    <div class="field">
      <label>Ciudad</label>
      <input type="text" id="city" name="city" value="<%= meeti.city %>">
    </div>

    <div class="field">
      <label>Estado</label>
      <input type="text" id="state" name="state" value="<%= meeti.state %>">
    </div>

    <div class="field">
      <label>País</label>
      <input type="text" id="country" name="country" value="<%= meeti.country %>">
    </div>

    <input type="hidden" id="lat" name="lat" readonly="readonly" value="<%= meeti.location[0] %>">
    <input type="hidden" id="lng" name="lng" readonly="readonly" value="<%= meeti.location[1] %>">
    
    <div class="field send">
      <input type="submit" class="btn btn-pink" value="Guardar Cambios">
    </div>
  </form>
</main>
