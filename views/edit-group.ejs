<main class="container container-forms no-padding">
  <h1>
    <%= pageName %>
  </h1>

  <form class="default-form" method="POST">
    <div class="field">
      <label>Nombre</label>
      <input type="text" value="<%= group.name %>" name="name" placeholder="Nombre Grupo">
    </div>

    <div class="field description">
      <label>Descripción</label>

      <div class="editor-container">
        <input type="hidden" id="x" name="description" value="<%= group.description %>">
        <trix-editor input="x"></trix-editor>
      </div>
    </div>

    <div class="field">
      <label>Categoría</label>

      <select name="categoryId">
        <option value="" selected disabled> -- Elige una categoría -- </option>
        <% categories.forEach(category => { %>
          <option value="<%= category.id %>" <%= (group.categoryId === category.id ) ? 'selected' : '' %> >
            <%= category.name %>
          </option>
        <% }) %>
      </select>
    </div>

    <div class="field">
      <label>Sitio Web</label>
      <input type="url" name="url" placeholder="Sitio Web" value="<%= group.url %>">
    </div>
    
    <div class="field send">
      <input type="submit" value="Guardar Cambios" class="btn btn-pink">
    </div>
  </form>
</main>
